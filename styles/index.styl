@font-face{
  font-family 'lombok'
  src url('../public/font/Lombok.otf') format('truetype')
  font-style normal
  font-weight normal
}

html
  height 100%
body
  height 100%
  font 16px/1 Helvetica, arial, sans-serif
  background #000
  overflow hidden

body,h1,h2,h3,h4,h5,h6,p
  margin 0
  font-weight 100
ul
  margin 0
  padding 0
  li
    list-style none

em,i
  font-style normal
  
a,a:active,a:link,a:visited
  color #fff
  text-decoration none
  outline none

#particles-js
  position absolute
  width 100%
  height 100%
  overflow hidden
  z-index 0
  opacity 0
  transition all 3s
  
.sec-1
.sec-2
  display flex
  justify-content center
  align-items center
  height 100%
  margin 0 auto
  text-align center
  color #fff
  transition all .5s

.sec-1
  .content
    z-index 1
    font-weight 100
    text-transform uppercase
  
    h1
      margin-bottom .5em
      transition all 1.5s
      font 2.25em 'lombok', Helvetica, arial, sans-serif
      line-height 1
      opacity 0
    h2
      margin-bottom 1em
      font-size 1.4em
      letter-spacing 2.5px
      em
        position relative
        span
          transition all .3s
          &.replacer
            display none
            position absolute
            top 0
            left 0
            transform translateY(100%)
      
    a
      display block
      line-height 2
      letter-spacing 2px
      transition all .2s
      &:hover
        color #f99

.sec-2
  .content
    text-transform uppercase
    letter-spacing 2px
    p
      margin-bottom 2em
    .block
      z-index 1
      width 300px
      margin-bottom 1em
      overflow hidden
      clear both
      
      h3
        float left
        overflow hidden
        width 60%
        height 24px
        line-height 24px
        white-space nowrap
        text-transform uppercase
        font-size 16px
        &::after
          content '\00a0\00a0\00a0.................................'
      ul
        float right
        box-sizing border-box
        width 40%
        width 120px
        padding-left 15px
        text-align left
        font-size 14px
        li
          height 24px
          line-height 26px
          a
            float left
            height 100%
            transition all .2s
            &:hover
              color #f99